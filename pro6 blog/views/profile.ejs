<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/styles.css" rel="stylesheet">
</head>
<body class="bg-dark text-light">
    
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/dashboard">Admin Dashboard</a>
            <div>
                <a href="/dashboard" class="btn btn-success">⬅️ Back</a>
                <a href="/logout" class="btn btn-danger">🚪 Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="card bg-secondary text-light shadow-lg p-4">
            <h2 class="fw-bold text-center">👤 Admin Profile</h2>
            <p class="text-center">Manage Users & Products</p>
            <ul class="list-group list-group-flush">
                <li class="list-group-item bg-dark text-light">📧 Email: <strong><%= user.email %></strong></li>
            </ul>
        </div>
    </div>

    <div class="container mt-5">
        <h3 class="text-center text-info">📋 Users List</h3>
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.email %></td>
                        <td>
                            <a href="/edit-user/<%= user._id %>" class="btn btn-warning btn-sm">✏️ Edit</a>
                            <a href="/delete-user/<%= user._id %>" class="btn btn-danger btn-sm">🗑️ Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <div class="container mt-5">
        <h3 class="text-center text-info">📦 Products List</h3>
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                    <tr>
                        <td><%= product.name %></td>
                        <td>$<%= product.price %></td>
                        <td>
                            <a href="/edit-product/<%= product._id %>" class="btn btn-warning btn-sm">✏️ Edit</a>
                            <a href="/delete-product/<%= product._id %>" class="btn btn-danger btn-sm">🗑️ Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <footer class="bg-primary text-center text-light py-3 mt-5">
        <p>© 2025 Admin Dashboard. All Rights Reserved.</p>
    </footer>

</body>
</html>
