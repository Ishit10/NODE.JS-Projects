<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/styles.css" rel="stylesheet">
</head>
<body class="bg-dark text-light">
    
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="#">User Dashboard</a>
            <div>
                <a href="/profile" class="btn btn-light me-2">Profile</a>
                <a href="/products/add" class="btn btn-warning">➕ Add Product</a>
                <a href="/logout" class="btn btn-danger ms-2">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container text-center mt-4">
        <h2>Welcome, <%= user.email %>!</h2>
        <p class="text-secondary">Here are the available products:</p>
    </div>

    <div class="container mt-4">
        <div class="row">
            <% if (products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="col-md-4">
                        <div class="card bg-light text-dark shadow-lg">
                            <div class="card-body">
                                <h5 class="card-title"><%= product.name %></h5>
                                <p class="card-text"><%= product.description %></p>
                                <p class="fw-bold text-success">$<%= product.price %></p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="text-center text-warning">No products available</p>
            <% } %>
        </div>
    </div>

    <footer class="bg-primary text-center text-light py-3 mt-5">
        <p>© 2025 Admin Dashboard. All Rights Reserved.</p>
    </footer>

</body>
</html>
