<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BookMyShow - Movies</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <nav class="navbar navbar-dark bg-danger">
    <div class="container">
      <a class="navbar-brand" href="/">üé¨ BookMyShow</a>
      <a href="./form" class="btn btn-light">‚ûï Add Movie</a>
    </div>
  </nav>

  <div class="container mt-4">
    <h2 class="mb-3">Now Showing</h2>
    <div class="row">
      <% movies.forEach(movie => { %>
        <div class="col-md-3 mb-4">
          <div class="card">
            <img src="<%= movie.image %>" class="card-img-top" alt="<%= movie.title %>">
            <div class="card-body">
              <h5 class="card-title"><%= movie.title %></h5>
              <p class="card-text"><%= movie.description %></p>
              <div class="d-flex justify-content-between align-items-center">
                <span class="badge bg-warning text-dark">‚≠ê <%= movie.rating %></span>
                <a href="/deleteMovie/<%= movie.id %>"><button class="action-btn delete-btn">Delete</button></a>
              <a href="/editData/<%= movie.id %>"><button class="action-btn edit-btn">Edit</button></a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
