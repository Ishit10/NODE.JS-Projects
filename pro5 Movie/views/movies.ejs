<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BookMyShow - Movies</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: url('https://source.unsplash.com/1600x900/?cinema,hollywood') no-repeat center center/cover;
      min-height: 100vh;
      color: white;
    }

    .navbar {
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
    }

    .movie-container {
      background: rgba(0, 0, 0, 0.85);
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0px 0px 20px rgba(255, 0, 0, 0.5);
    }

    .card {
      background: rgba(0, 0, 0, 0.9);
      color: white;
      border: none;
      transition: transform 0.3s ease-in-out;
    }

    .card:hover {
      transform: scale(1.05);
    }

    .card-img-top {
      border-radius: 10px 10px 0 0;
      height: 300px;
      object-fit: cover;
    }

    .badge {
      font-size: 1rem;
      padding: 5px 10px;
    }

    .action-btn {
      border: none;
      padding: 6px 12px;
      border-radius: 5px;
      cursor: pointer;
      font-weight: bold;
      transition: 0.3s;
    }

    .edit-btn {
      background: #ffcc00;
      color: black;
    }

    .edit-btn:hover {
      background: #e6b800;
    }

    .delete-btn {
      background: red;
      color: white;
    }

    .delete-btn:hover {
      background: darkred;
    }
  </style>
</head>
<body>

  <nav class="navbar navbar-dark bg-danger">
    <div class="container">
      <a class="navbar-brand fw-bold text-white" href="/">üé¨ BookMyShow</a>
      <a href="./form" class="btn btn-light">‚ûï Add Movie</a>
    </div>
  </nav>

  <div class="container mt-4 movie-container">
    <h2 class="mb-3 text-center">üé• Now Showing</h2>
    <div class="row">
      <% movies.forEach(movie => { %>
        <div class="col-md-3 mb-4">
          <div class="card">
            <img src="<%= movie.image %>" class="card-img-top" alt="<%= movie.title %>">
            <div class="card-body text-center">
              <h5 class="card-title"><%= movie.title %></h5>
              <p class="card-text"><%= movie.description %></p>
              <div class="d-flex justify-content-between align-items-center">
                <span class="badge bg-warning text-dark">‚≠ê <%= movie.rating %></span>
                <div>
                  <a href="/editMovie/<%= movie.id %>">
                    <button class="action-btn edit-btn">Edit</button>
                  </a>
                  <a href="/deleteMovie/<%= movie.id %>">
                    <button class="action-btn delete-btn">Delete</button>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
