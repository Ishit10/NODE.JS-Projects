<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Book Store</title>
    <style>
        body {
            background-color: #2c3e50;
            color: white;
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
        }
        .container {
            width: 80%;
            background-color: #34495e;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
        .header {
            text-align: center;
            color: #e74c3c;
        }
        .form-container {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }
        input, button {
            padding: 10px;
            border-radius: 5px;
            border: none;
        }
        input {
            width: 100%;
        }
        button {
            cursor: pointer;
        }
        .submit-btn {
            background-color: #e74c3c;
            color: white;
        }
        .book-list {
            margin-top: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            text-align: center;
            background-color: #ecf0f1;
            color: black;
        }
        th, td {
            padding: 10px;
            border: 1px solid #bdc3c7;
        }
        .action-btn {
            padding: 5px 10px;
            border-radius: 5px;
            border: none;
            color: white;
            cursor: pointer;
        }
        .delete-btn {
            background-color: red;
        }
        .edit-btn {
            background-color: blue;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="header">The Book Store</h1>
        <form class="form-container" action="/add-data" method="post" enctype="multipart/form-data">
            <input type="text" placeholder="Enter Book Name" name="userName" required>
            <input type="email" placeholder="Enter Email" name="email" required>
            <input type="text" placeholder="Enter Author Name" name="author" required>
            <input type="number" placeholder="Enter Price" name="price" required>
            <input type="file" name="image" >
            <button type="submit" class="submit-btn">Add Book</button>
        </form>
    </div>
    <div class="container book-list">
        <h2>List of Books</h2>
        <table>
            <tr>
                <th>Book Name</th>
                <th>Email</th>
                <th>Author</th>
                <th>Price</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
            <% userdata.map((user) => { %>
                <tr>
                    <td><%= user.userName %></td>
                    <td><%= user.email %></td>
                    <td><%= user.author %></td>
                    <td><%= user.price %></td>
                    <td><img src="<%= user.image %>" height="60" width="auto" alt="Book Image"></td>
                    <td>
                        <a href="/delete/<%= user.id %>"><button class="action-btn delete-btn">Delete</button></a>
                        <a href="/edit/<%= user.id %>"><button class="action-btn edit-btn">Edit</button></a>
                    </td>
                </tr>
            <% }); %>
        </table>
    </div>
</body>
</html>
