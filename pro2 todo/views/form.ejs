<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TODO List</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f8f9fa;
      }
      .todo-container {
        max-width: 800px;
        margin: 50px auto;
        background: #ffffff;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        padding: 20px;
      }
      .todo-header {
        font-size: 2rem;
        font-weight: bold;
        text-align: center;
        color: #343a40;
        margin-bottom: 20px;
      }
      .task-list {
        max-height: 400px;
        overflow-y: auto;
      }
      .empty-message {
        text-align: center;
        color: #6c757d;
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <div class="todo-container">
      <h1 class="todo-header">TODO List</h1>

      <form action="/addData" method="post" class="input-group mb-4">
        <input
          type="text"
          name="userName"
          class="form-control"
          placeholder="Enter a new task"
          required
        />
        <button class="btn btn-primary" type="submit">Add Task</button>
      </form>

      <div class="card">
        <div class="card-body task-list">
          <% if (record.length > 0) { %>
          <ul class="list-group">
            <% record.forEach((task, index) => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span><%= task %></span>
              <div>
                <a href="/edit/<%= index %>" class="btn btn-sm btn-outline-warning me-2">
                  Edit
                </a>
                <a href="/delete/<%= index %>" class="btn btn-sm btn-outline-danger">
                  Delete
                </a>
              </div>
            </li>
            <% }); %>
          </ul>
          <% } else { %>
          <p class="empty-message">No tasks added yet!</p>
          <% } %>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
